<p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>Editing Book</h2>
              <% if @book.errors.any? %>
              <strong>
                <%= @book.errors.count %> errors prohibited this obj from being saved:
              </strong>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
              <% end %>

            <%= form_with model: @book do |f| %>
              <div class="form-group">
                <label for="book_title">Title</label>
                <input class="form-control book_title" type="text" name="book[title]" id="book_title", value="<%= @book.title %>">
              </div>

              <div class="form-group">
                <label for="book body">Opinion</label>
                <textarea class="form-control book_body" name="book[body]" id="book_body"><%= @book.body %></textarea>
              </div>

              <div class="form-group">
                <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
              </div>
            <% end %>

            <%= link_to "Show", book_path %>
            |
            <%= link_to "Back", books_path %>
        </div>
      </div>
    </div>